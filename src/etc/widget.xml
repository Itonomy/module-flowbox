<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="Itonomy\Flowbox\Block\Widget\Flow" id="flowbox_flow">
        <label>Flowbox Flow</label>
        <description>A configurable Flowbox flow widget</description>
        <parameters>
            <!-- Shared parameters -->
            <parameter name="flow" xsi:type="select" required="false" visible="true" sort_order="10">
                <label>Flow</label>
                <options>
                    <option name="default" value="default" selected="true">
                        <label>Default</label>
                    </option>
                    <option name="dynamic-tag" value="dynamic-tag">
                        <label>Dynamic Tag</label>
                    </option>
                    <option name="dynamic-product" value="dynamic-product">
                        <label>Dynamic Product</label>
                    </option>
                </options>
            </parameter>
            <parameter name="key" xsi:type="text" required="true" visible="true" sort_order="20">
                <label>Key</label>
                <description>View your <![CDATA[<a href="#">flowpanel</a>]]> for an overview of your flows</description>
            </parameter>
            <parameter name="lazyload" xsi:type="select" required="false" visible="true" sort_order="99">
                <label>Lazy Load</label>
                <description>Enable lazy loading</description>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label>Yes</label>
                    </option>
                    <option name="no" value="0">
                        <label>No</label>
                    </option>
                </options>
            </parameter>

            <!-- Dynamic Product Flow -->
            <parameter name="product_id" xsi:type="text" required="false" visible="true" sort_order="30">
                <label>Product ID</label>
                <description>If not entered, current product SKU will be used</description>
                <depends>
                    <parameter name="flow" value="dynamic-product"/>
                </depends>
            </parameter>

            <!-- Dynamic Tag Flow -->
            <parameter name="tags" xsi:type="text" required="true" visible="true" sort_order="40">
                <label>Tags</label>
                <description>Tags to filter</description>
                <depends>
                    <parameter name="flow" value="dynamic-tag"/>
                </depends>
            </parameter>

            <parameter name="tags_operator" xsi:type="select" required="false" visible="true" sort_order="50">
                <label>Tags Operator</label>
                <description><![CDATA[Limit rendered posts to those containing <i>any</i> or <i>all</i> of the tags entered]]></description>
                <depends>
                    <parameter name="flow" value="dynamic-tag"/>
                </depends>
                <options>
                    <option name="any" value="any" selected="true">
                        <label>Any</label>
                    </option>
                    <option name="all" value="all">
                        <label>All</label>
                    </option>
                </options>
            </parameter>

            <parameter name="show_tag_bar" xsi:type="select" required="false" visible="true" sort_order="60">
                <label>Show Tag Bar</label>
                <depends>
                    <parameter name="flow" value="dynamic-tag"/>
                </depends>
                <options>
                    <option name="no" value="0">
                        <label>No</label>
                    </option>
                    <option name="yes" value="1" selected="true">
                        <label>Yes</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>
